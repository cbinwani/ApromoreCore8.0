<?xml version="1.0" encoding="UTF-8"?>

<!-- See https://www.zkoss.org/wiki/ZK%20Configuration%20Reference/zk.xml -->

<zk xmlns="http://www.zkoss.org/2005/zk/config"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://www.zkoss.org/2005/zk/config http://www.zkoss.org/2005/zk/config/zk.xsd">

  <preference>
    <name>org.zkoss.zk.ui.WebApp.name</name>
    <value>Apromore</value>
  </preference>

  <!-- Note that this is overridden by the value of ui.theme in site.properties -->
  <library-property>
    <name>org.zkoss.theme.preferred</name>
    <value>silvertail</value>  <!-- atlantic, breeze, sapphire, silvertail -->
  </library-property>

  <language-config>
    <addon-uri>/WEB-INF/lang-addon.xml</addon-uri>
  </language-config>

  <!-- Note that this is overridden by the value of ui.sessionTimeout in site.properties -->
  <session-config>
    <session-timeout>1800</session-timeout>  <!-- half an hour -->
  </session-config>
</zk>
