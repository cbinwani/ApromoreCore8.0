<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/maven-v4_0_0.xsd">

  <modelVersion>4.0.0</modelVersion>
  <parent>
    <groupId>org.apromore</groupId>
    <artifactId>lib</artifactId>
    <version>8.0-SNAPSHOT</version>
  </parent>

  <groupId>org.apromore</groupId>
  <artifactId>zk</artifactId>
  <packaging>bundle</packaging>
  <version>1.0-SNAPSHOT</version>
  <name>Apromore :: lib :: zk</name>
  <description>Bundlized version of the ZK web libraries.</description>
  <inceptionYear>2018</inceptionYear>

  <properties>
    <embedded.dependencies>commons-fileupload|commons-io|javassist|zcommon|zel|zk|zul|zweb</embedded.dependencies>
  </properties>

  <build>
    <plugins>
      <plugin>
        <groupId>org.apache.felix</groupId>
        <artifactId>maven-bundle-plugin</artifactId>
        <extensions>true</extensions>
        <configuration>
          <unpackBundle>false</unpackBundle>
          <instructions>
            <!-- Embedded non-OSGI libraries.  These dependencies should be in <scope>provided</scope>.  -->
            <Embed-Dependency>artifactId=${embedded.dependencies}</Embed-Dependency>
            <Embed-Transitive>true</Embed-Transitive>
            <Embed-Directory>OSGI-INF/lib</Embed-Directory>
            <Import-Package>
              *;resolution:=optional
            </Import-Package>
            <DynamicImport-Package>
              <!-- Packages dynamically referenced by UIPlugins.  TODO: figure out a way for ZK to do dynamic loading in UIPlugins without this -->
              *
            </DynamicImport-Package>
            <Export-Package>
              metainfo.*,
              org.zkoss.*,
              !web.WEB-INF.*,
              web.*
            </Export-Package>
          </instructions>
        </configuration>
      </plugin>
    </plugins>
  </build>

  <dependencies>
    <dependency>
      <groupId>org.zkoss.common</groupId>
      <artifactId>zcommon</artifactId>
    </dependency>
    <dependency>
      <groupId>org.zkoss.zk</groupId>
      <artifactId>zk</artifactId>
    </dependency>
    <dependency>
      <groupId>org.zkoss.zk</groupId>
      <artifactId>zul</artifactId>
    </dependency>
  </dependencies>
</project>
