<project xmlns="http://maven.apache.org/POM/4.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/POM/4.0.0 http://maven.apache.org/xsd/maven-4.0.0.xsd">

    <parent>
        <groupId>org.apromore</groupId>
        <artifactId>apromore</artifactId>
        <version>8.0-SNAPSHOT</version>
    </parent>

    <modelVersion>4.0.0</modelVersion>
    <artifactId>prom6-osgi</artifactId>
    <version>6.5.20180622</version>
    <packaging>bundle</packaging>
    <name>Apromore :: prom6-osgi</name>
    <description>ProM6 OSGi wrapper</description>
    <inceptionYear>2019</inceptionYear>

    <repositories>
      <repository>
        <id>project-repository</id>
        <url>file://${project.basedir}/repository</url>
      </repository>
    </repositories>

    <build>
        <plugins>
            <plugin>
                <groupId>org.apache.felix</groupId>
                <artifactId>maven-bundle-plugin</artifactId>
                <extensions>true</extensions>
                <configuration>
                    <instructions>
                        <Embed-Dependency>bsh|bpmn|jgraph|prom6-*|slickerbox1|uitopia|widgets</Embed-Dependency>
                        <Embed-Directory>OSGI-INF/lib</Embed-Directory>
                        <Import-Package>
                            !com.sun.management,
                            !info.clearthought.layout,
                            !jargs.gnu,
                            !junit.framework,
                            !org.apache.bsf.*,
                            !org.apache.commons.compress.archivers.zip,
                            !org.apache.commons.io,
                            !org.freehep.*,
                            !org.junit.*,
                            !sun.management,
                            *
                        </Import-Package>
                        <Export-Package>
                            !*.class-use,
                            <!-- com.fluxicon.slickerbox.*,
                            org.deckfour.uitopia.*, -->
                            org.processmining.*,
                            !org.processmining.contexts.test
                        </Export-Package>
                    </instructions>
                </configuration>
            </plugin>
        </plugins>
    </build>

    <dependencies>
        <dependency>
            <groupId>bsh</groupId>
            <artifactId>bsh</artifactId>
            <version>1.3.0</version>
        </dependency>
        <!-- Prevents bundle compiler from remarking on org.junit.runner.RunWith annotation -->
        <dependency>
            <groupId>junit</groupId>
            <artifactId>junit</artifactId>
            <scope>provided</scope>
        </dependency>
        <dependency>
            <groupId>org.apromore</groupId>
            <artifactId>openxes-osgi</artifactId>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>bpmn</artifactId>
            <version>6.5.20180622</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>jgraph</artifactId>
            <version>6.5.20180622</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom6-contexts</artifactId>
            <version>6.5.20180622</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom6-framework</artifactId>
            <version>6.5.20180622</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom6-models</artifactId>
            <version>6.5.20180622</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>prom6-plugins</artifactId>
            <version>6.5.20180622</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>slickerbox1</artifactId>
            <version>6.5.20180622</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>uitopia</artifactId>
            <version>6.5.20180622</version>
        </dependency>
        <dependency>
            <groupId>org.processmining</groupId>
            <artifactId>widgets</artifactId>
            <version>6.5.20180622</version>
        </dependency>
    </dependencies>
</project>
