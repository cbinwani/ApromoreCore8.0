<?xml version="1.0"?>
 
<!DOCTYPE suppressions PUBLIC
     "-//Puppy Crawl//DTD Suppressions 1.0//EN"
     "http://www.puppycrawl.com/dtds/suppressions_1_0.dtd">
 
<suppressions>
  <!-- The following classes are designed to be subclassed. -->
  <suppress checks="DesignForExtension" files="AbstractUIPlugin\.java"/>
  <suppress checks="DesignForExtension" files="ItemWrapper\.java"/>

  <!-- Citing an external URL or classname in a doc comment that can't be line-broken -->
  <suppress checks="LineLength" files="CustomZULComponent\.java" lines="30"/>
  <suppress checks="LineLength" files="UIPlugin\.java" lines="47"/>
  <suppress checks="LineLength" files="UIServletContextHelper\.java" lines="48"/>

  <!-- The automatically-included license header contains trailing spaces -->
  <suppress checks="RegexpSingleline" files="\S*\.java" lines="13, 18"/>

  <!-- To do: notifications, once item observer plugins are implemented -->
  <suppress checks="TodoComment" files="FolderPluginImpl\.java"/>
  <suppress checks="TodoComment" files="ItemServiceImpl\.java"/>
  <suppress checks="TodoComment" files="SelectItemUIPlugin\.java"/>

  <!-- To do: better error handling when interacting with login modules -->
  <suppress checks="TodoComment" files="UIServiceImpl\.java"/>
</suppressions>
